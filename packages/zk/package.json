{
  "name": "zk-circuits",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@darkforest_eth/hashing": "^6.6.6"
  },
  "devDependencies": {
    "hardhat": "^2.2.0",
    "hardhat-circom": "^1.0.0"
  },
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "prepare": "exit 0",
    "prepublishOnly": "exit 0",
    "test": "exit 0",
    "lint": "eslint .",
    "format": "prettier --write .",
    "docs": "typedoc && npm run format",
    "circom:dev": "hardhat circom --deterministic --debug --verbose",
    "circom:prod": "hardhat circom --verbose",
    "internal:wasm": "cp ./circuits/main.wasm ../../client/public/circuits/main.wasm",
    "internal:zkey": "cp ./circuits/main.zkey ../../client/public/circuits/main.zkey",
    "internal:vkey_gen": "snarkjs zkey export verificationkey ./circuits/main.zkey ./circuits/verification_key.json",
    "internal:vkey": "yarn internal:vkey_gen && cp ./circuits/verification_key.json ../../client/public/circuits/verification_key.json",
    "circom:cp": "yarn internal:wasm && yarn internal:zkey && yarn internal:vkey",
    "internal:wasm:fake": "cp ./circuits/fake_perlin.wasm ../../client/public/circuits/main.wasm",
    "internal:zkey:fake": "cp ./circuits/main.zkey ../../client/public/circuits/main.zkey",
    "internal:vkey_gen:fake": "snarkjs zkey export verificationkey ./circuits/main.zkey ./circuits/verification_key.json",
    "internal:vkey:fake": "yarn internal:vkey_gen:fake && cp ./circuits/verification_key.json ../../client/public/circuits/verification_key.json",
    "circom:cp:fake": "yarn internal:wasm:fake && yarn internal:zkey:fake && yarn internal:vkey:fake"
  }
}
